<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FF0d0c31"
    tools:context="com.andronicus.rehabilitateme.SigninActivity">
    <EditText
        android:layout_marginTop="120dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:background="@drawable/login_edit_text_style"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:paddingLeft="16dp"
        android:layout_marginBottom="16dp"
        android:drawableLeft="@drawable/ic_username_icon"
        android:drawablePadding="8dp"
        android:hint="Username"/>
    <EditText
        android:background="@drawable/login_edit_text_style"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:paddingLeft="16dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:inputType="textPassword"
        android:layout_marginBottom="16dp"
        android:drawableLeft="@drawable/ic_password_icon"
        android:drawablePadding="8dp"
        android:hint="Password"/>
    <Button
        android:id="@+id/btn_sign_in"
        android:background="@drawable/login_button_style"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:textColor="#FFFFFF"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="16dp"
        android:textStyle="bold"
        android:text="Sign In"/>
    <Button
        android:id="@+id/btn_sign_up"
        android:background="@drawable/login_button_style"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:textColor="#FFFFFF"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"
        android:text="Sign Up"/>
    <TextView
        android:id="@+id/tv_forgot_password"
        android:layout_width="match_parent"
        android:gravity="center"
        android:textSize="15sp"
        android:textColor="#BDBDBD"
        android:layout_height="wrap_content"
        tools:text="Forgot Password?"/>
</LinearLayout>
